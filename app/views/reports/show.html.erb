<% if @comments.present? %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @report.created_at %>
</p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<% else %>
<p>まだコメントはありません</p>
<% end %>

<%= render 'comments/form', commentable: @report, comment: @comments %>


<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
