<h1><%= User.human_attribute_name(:all_followers) %></h1>

<% if @users.exists? %>
    <table>
      <thead>
        <tr>
          <th><%= User.human_attribute_name(:avatar) %></th>
          <th><%= User.human_attribute_name(:name) %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th>
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar.variant(resize_to_fill: [30, 30])%>
              <% end %>
            </th>
            <td><%= user.name %></td>
            <td><%= link_to t('views.common.show'), user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

<%= link_to t('views.common.back'), user_path %>
