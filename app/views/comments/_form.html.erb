<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:avatar) %></th>
      <th><%= Comment.human_attribute_name(:name) %></th>
      <th><%= Comment.human_attribute_name(:content) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= image_tag User.find(comment.user_id).avatar.variant(resize_to_fill: [30, 30]) if User.find(comment.user_id).avatar.attached? %>
        </td>
        <td>
          <% if User.find(comment.user_id).name.empty? %>
            <%= User.find(comment.user_id).email %>
          <% else %>
            <%= User.find(comment.user_id).name %>
          <% end %>
        </td>
        
        <td><%= comment.content %></td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: [commentable, Comment.new] do |f| %>  
  <%= f.text_area :content %>  
  <div class="actions">  
    <%= f.submit "コメントする" %>  
  </div>  
<% end %>