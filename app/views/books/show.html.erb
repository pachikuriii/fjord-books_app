<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% if @comments.present? %>
  <table>
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:avatar) %></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= Comment.human_attribute_name(:content) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= image_tag User.find(comment.user_id).avatar.variant(resize_to_fill: [30, 30]) if User.find(comment.user_id).avatar.attached? %>
          </td>

          <td>
            <% if User.find(comment.user_id).name.empty? %>
              <%= User.find(comment.user_id).email %>
            <% else %>
              <%= User.find(comment.user_id).name %>
            <% end %>
          </td>

          <td><%= comment.content %></td>
          <td><%= l(comment.created_at, format: :long) %></td>
          <td><%= link_to t('views.common.edit'), edit_polymorphic_url([@book, comment] ) %></td>
          <td><%= link_to t('views.common.destroy'), polymorphic_url([@book, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p><%= t('views.common.nothing_to_show', name: Comment.model_name.human) %></p>
<% end %>

<%= render 'comments/form', commentable: @book %>

<%= link_to t('views.common.edit'), edit_book_path(@book) %> |
<%= link_to t('views.common.back'), books_path %>
